= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.collection_select :product_id, Product.all, :id, :name
  .field
    = f.label :pieces_per_package
    = f.number_field :pieces_per_package
  .field
    = f.label :length
    = f.text_field :length
  .field
    = f.label :unit_id
    = f.number_field :unit_id
  .field
    = f.label :memory_id
    = f.number_field :memory_id
  .field
    = f.label :properties
    = f.text_field :properties
  .field
    = f.label :vendor_sku
    = f.text_field :vendor_sku
  .field
    = f.label :comment
    = f.text_area :comment, :rows => 3
  .actions
    = f.submit 'Save'
