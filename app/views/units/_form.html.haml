= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.number_field :product_id
  .field
    = f.label :items_per_unit
    = f.number_field :items_per_unit
  .field
    = f.label :price_per_unit
    = f.text_field :price_per_unit
  .field
    = f.label :minimum_purchase
    = f.number_field :minimum_purchase
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
