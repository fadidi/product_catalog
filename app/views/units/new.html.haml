%h1 New unit

= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.collection_select :product_id, Product.all, :id, :name
  .field
    = f.label :store_sku
    = f.text_field :store_sku
  .field
    = f.label :items_per_unit
    = f.number_field :items_per_unit
  .field
    = f.label :price_per_item
    = f.text_field :price_per_item
  .field
    = f.label :minimum_purchase
    = f.number_field :minimum_purchase
  .field
    = f.label :comment
    = f.text_area :comment, :rows => 3
  .actions
    = f.submit 'Save'

= link_to 'Back', units_path
